{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello  ✅</h1>

        <a href="{{ path('app_client_voiture_index') }}" class="btn btn-primary mb-3">Mes voitures</a>
        <a href="{{ path('app_logout') }}" class="btn btn-danger mb-3">Logout</a>

        <div class="card">
            <div class="card-body">
                <div style="text-align: center"><h3 class="card-title">Informations :</h3></div>
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nom:</strong> {{ app.user.nom }}</li>
                    <li class="list-group-item"><strong>Prénom:</strong> {{ app.user.prenom }}</li>
                    <li class="list-group-item"><strong>Email:</strong> {{ app.user.email }}</li>
                </ul>
            </div>
        </div>

    </div>
{% endblock %}
