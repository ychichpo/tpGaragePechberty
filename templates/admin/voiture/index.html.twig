    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modele</th>
                <th>Annee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.marque }}</td>
                <td>{{ voiture.modele }}</td>
                <td>{{ voiture.annee }}</td>
                <td>
                    <a href="{{ path('app_admin_voiture_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('app_admin_voiture_edit', {'id': voiture.id}) }}">edit</a>
